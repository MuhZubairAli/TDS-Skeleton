<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cornerRoundRadius"
    android:elevation="@dimen/spacePrimaryHalf"
    android:background="?attr/colorQuestionCardBackground"
    android:layout_marginBottom="@dimen/spacePrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacePrimary"
            android:background="?attr/colorQuestionStatementBackgroundDim"
            android:orientation="horizontal"
            android:onClick="toggleDetails">

            <TextView
                android:id="@+id/th_farm_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:textAlignment="textStart"
                style="@style/textH5"
                android:textColor="?attr/colorText"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_pending"
                    app:tint="?attr/colorText"
                    android:layout_marginHorizontal="@dimen/spacePrimary"/>

                <TextView
                    android:id="@+id/th_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/textH5"
                    android:textColor="?attr/colorText"/>

            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_marginTop="@dimen/spacePrimaryHalf"
            android:padding="@dimen/spacePrimary"
            android:visibility="gone">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/td_bordered"
                    android:text="Owner/Proprietor"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/td_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/td_bordered"
                    android:layout_span="3"
                    android:textColor="@android:color/black"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/td_bordered"
                    android:text="Respondent"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/td_respondent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/td_bordered"
                    android:layout_span="3"
                    android:textColor="@android:color/black"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/td_bordered"
                    android:text="Phone #"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/td_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/td_bordered"
                    android:layout_span="3"
                    android:textColor="@android:color/black"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/td_bordered"
                    android:textStyle="bold"
                    android:text="Address"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/td_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/td_bordered"
                    android:layout_span="3"
                    android:textColor="@android:color/black"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/td_bordered"
                    android:textStyle="bold"
                    android:text="Source"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/td_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/td_bordered"
                    android:layout_span="3"
                    android:textColor="@android:color/black"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/container_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:stretchColumns="*"
            android:paddingHorizontal="@dimen/spacePrimaryHalf"
            android:paddingBottom="@dimen/spacePrimary">

            <TableRow>
                <Button
                    android:id="@+id/btn_begin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Begin"
                    android:background="?attr/bgGradientAccentCompact"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontSizeH4"
                    android:textAllCaps="false"
                    android:layout_margin="@dimen/spacePrimaryHalf"/>

                <Button
                    android:id="@+id/btn_verify"
                    android:text="Verify"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/bgGradientAccentCompact"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontSizeH4"
                    android:textAllCaps="false"
                    android:layout_margin="@dimen/spacePrimaryHalf"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>