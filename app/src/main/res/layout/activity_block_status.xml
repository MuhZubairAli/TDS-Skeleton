<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/drawableBackground"
    tools:context=".activities.BlockStatusActivity"
    android:animateLayoutChanges="true"
    android:padding="@dimen/spacePrimaryHalf">
    <LinearLayout
        android:id="@+id/container_big_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/spacePrimaryHalf"
                app:cardBackgroundColor="?attr/colorAccentDark"
                app:cardCornerRadius="@dimen/cornerRoundRadius"
                app:cardElevation="@dimen/elevationHeight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacePrimary"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_total_blocks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        style="@style/textH3"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/spaceBig"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Total Blocks"
                        android:textColor="@android:color/white"
                        style="@style/textH5" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/spacePrimaryHalf"
                app:cardBackgroundColor="?attr/colorAccentDark"
                app:cardCornerRadius="@dimen/cornerRoundRadius"
                app:cardElevation="@dimen/elevationHeight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacePrimary"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_synced_blocks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        style="@style/textH3"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/spaceBig"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Synced Blocks"
                        android:textColor="@android:color/white"
                        style="@style/textH5" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/spacePrimaryHalf"
                app:cardBackgroundColor="?attr/colorAccentDark"
                app:cardCornerRadius="@dimen/cornerRoundRadius"
                app:cardElevation="@dimen/elevationHeight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacePrimary"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_pending_blocks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        style="@style/textH3"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/spaceBig"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Pending Blocks"
                        android:textColor="@android:color/white"
                        style="@style/textH5" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/spacePrimaryHalf"
                app:cardBackgroundColor="?attr/colorAccentDark"
                app:cardCornerRadius="@dimen/cornerRoundRadius"
                app:cardElevation="@dimen/elevationHeight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacePrimary"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_completed_blocks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        style="@style/textH3"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/spaceBig"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Completed Blocks"
                        android:textColor="@android:color/white"
                        style="@style/textH5" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_block_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

    </LinearLayout>
</ScrollView>