<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/drawableBackground"
    tools:context=".activities.BackupActivity"
    android:padding="@dimen/spacePrimaryHalf"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_margin="@dimen/spacePrimaryHalf"
        app:cardCornerRadius="@dimen/cornerRoundRadius"
        android:elevation="@dimen/elevationHeight"
        app:cardBackgroundColor="?attr/colorQuestionCardBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorAccentDark"
                android:padding="@dimen/spacePrimary">

                <TextView
                    style="@style/textH5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/spacePrimaryHalf"
                    android:text="Local Backups"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_file" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_backup_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Bakup (Local)"
                android:background="?attr/bgGradientAccentCompact"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fontSizeH4"
                android:textAllCaps="false"
                android:layout_margin="@dimen/spacePrimaryHalf"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacePrimaryHalf"
                android:orientation="horizontal">

                <TextView
                    style="@style/tableCellZygote"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:text="ID" />

                <TextView
                    style="@style/tableCellZygote"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="Timestamp" />

                <TextView
                    style="@style/tableCellZygote"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Type" />

                <TextView
                    style="@style/tableCellZygote"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Action" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/local_backup_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/spacePrimaryHalf"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_margin="@dimen/spacePrimaryHalf"
        app:cardCornerRadius="@dimen/cornerRoundRadius"
        android:elevation="@dimen/elevationHeight"
        app:cardBackgroundColor="?attr/colorQuestionCardBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorAccentDark"
                android:padding="@dimen/spacePrimary">

                <TextView
                    style="@style/textH5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/spacePrimaryHalf"
                    android:text="Online Backups"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_cloud_upload" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_backup_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Online Backup (Requires Internet)"
                android:background="?attr/bgGradientAccentCompact"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fontSizeH4"
                android:textAllCaps="false"
                android:layout_margin="@dimen/spacePrimaryHalf"/>

            <Button
                android:id="@+id/btn_scan_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan online backups (Requires Internet)"
                android:background="?attr/bgGradientAccentCompact"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fontSizeH4"
                android:textAllCaps="false"
                android:layout_margin="@dimen/spacePrimaryHalf"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/spacePrimaryHalf">

                <TextView
                    style="@style/tableCellZygote"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:text="ID" />

                <TextView
                    style="@style/tableCellZygote"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="Timestamp" />

                <TextView
                    style="@style/tableCellZygote"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Type" />

                <TextView
                    style="@style/tableCellZygote"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Action" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/online_backup_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/spacePrimaryHalf">

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>